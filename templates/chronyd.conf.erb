# File managed by Puppet

<% [@servers].flatten.each do |server| -%>
server <%= server %><% if @iburst -%> iburst<% end -%><% if @offline -%> offline<% end %>
<% end -%>
<% [@refclock].flatten.each do |refclock| -%>
refclock <%= refclock %>
<% end -%>

<% if @source_port -%>
acquisitionport <%= @source_port %>
<% end -%>
<% if !@serve_ntp -%>
port 0
<% end -%>

<% if @stratumweight -%>
stratumweight 0
<% end -%>

driftfile <%= @driftfile %>

<% if @sync_local_clock %>
rtcsync
<% end %>

makestep 10 3

<% [@bindaddress].flatten.each do |bindaddress| -%>
bindaddress <%= bindaddress %>
<% end -%>

<% [@client_allow].flatten.each do |client_allow| -%>
allow <%= client_allow %>
<% end -%>

<% [@client_deny].flatten.each do |client_deny| -%>
deny <%= client_deny %>
<% end -%>

<% [@bindcmdaddress].flatten.each do |bindcmdaddress| -%>
bindcmdaddress <%= bindcmdaddress %>
<% end -%>
<% if @cmdport -%>
cmdport <%= @cmdport %>
<% end -%>

<% if @udlc -%>
local stratum 10
<% end -%>

keyfile <%= @keys_file %>

<% if Gem::Version.new(@chrony_version) < Gem::Version.new('2.2') -%>
commandkey 1
generatecommandkey
<% end -%>

<% if !@client_log -%>
noclientlog
<% end -%>

logchange 0.5

logdir <%= @log_dir %>

<% if @rtconutc -%>
rtconutc
<% end -%>
